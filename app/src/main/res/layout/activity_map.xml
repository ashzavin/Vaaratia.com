<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:fitsSystemWindows="true"
    tools:context="com.nasapp.varatiacom.map">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view3">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Map and Contacts"
        android:id="@+id/textView32"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="See map"
        android:id="@+id/button"
        android:background="@drawable/shada"
        android:onClick="jao"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textView32"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Call Owner"
        android:background="@drawable/shada"
        android:id="@+id/button2"
        android:onClick="call1"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/imageView8"
        android:src="@drawable/map"

        android:layout_above="@+id/button2"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/imageView9"
        android:src="@drawable/phone"

        android:layout_alignBottom="@+id/button2"
        android:layout_alignRight="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView8" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Mail Owner"
        android:background="@drawable/shada"
        android:id="@+id/button7"
        android:onClick="nao"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/imageView10"
        android:src="@drawable/web"
        android:onClick="nao"
        android:layout_alignBottom="@+id/button7"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />


</RelativeLayout>
